{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "nodenext",
		"module": "nodenext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"incremental": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src"]
}
